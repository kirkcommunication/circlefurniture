<style>
.loc_section_wrapper{margin-top:50px;margin-bottom:50px;display:grid; grid-template-columns:1fr 1fr 1fr 1fr; column-gap:25px;padding:0px;max-width:1440px;flex-wrap:wrap;row-gap:25px;}
.location_box{text-align:center;border:1px solid #ececec;padding:0px;overflow:hidden;width:100%;}
  .content_outerbox{ display:flex; gap:10px; justify-content:space-between; text-align:left; padding:0px 15px 20px;}
  .content_outerbox h4{ padding:0px; margin:0px; margin-bottom:5px;}
  .location_box:hover {box-shadow: 0px 4px 40px 0px rgba(0, 0, 0, 0.05);}
  .location_box h2.store-title{ font-size:24px; line-height:30px;text-align:left; margin-bottom:15px; margin-top:10px; font-family: "Poppins", sans-serif; font-weight:400;}
  .location_box h3{ margin:0px 0px 2px;font-family: "Poppins", sans-serif; font-size:22px;}
  .location_box h2{ padding-left:15px; padding-right:15px;font-family: "Poppins", sans-serif;}
  .store-image img{ object-fit:cover; width:100%; height:280px;}
   p.store-info{ font-size:16px; margin:0px;}

  #overlay {position: fixed; z-index: 99999; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.8); display: none; align-items: center; justify-content: center;}
#popup{ padding:0px; width:100%; position:relative; max-width:854px; line-height:0px;}
#overlay #close-btn{ color:#fff; position:absolute; right:-40px; top:-20px; width:30px; height:30px; line-height:15px; cursor:pointer;}
#overlay.active{ display:flex; justify-cotent:center; align-items:center;}
  #overlay iframe {width: 100%;max-height: 70vh;}

  @media only screen and (max-width:1200px){
  .loc_section_wrapper{grid-template-columns:1fr 1fr 1fr;}
  }
  @media only screen and (max-width:767px){
  .loc_section_wrapper{grid-template-columns:1fr 1fr;}
  }
  @media only screen and (max-width:600px){
  .loc_section_wrapper{grid-template-columns:1fr;}
  }
  
</style>
<script>
$(document).ready(function () {

      // Function to open the video popup
      function openPopup(videoId) {
        var videoUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1';
        $('#popup iframe').attr('src', videoUrl);
        $('#overlay').addClass('active');
      }

      // Function to close the video popup
      function closePopup() {
        $('#popup iframe').attr('src', '');
        $('#overlay').removeClass('active');
      }

      // Event listener for play button click
      $('.play-btn').click(function () {
        var videoId = $(this).data('video-id');
        openPopup(videoId);
      });

      // Event listener for close button click
      $('#close-btn').click(function () {
        closePopup();
      });

      // Event listener for overlay click to close the popup
      $('#overlay').click(function (e) {
        if (e.target === this) {
          closePopup();
        }
      });

    });
  
</script>
