<div class="page-width loc_section_wrapper">
  {% for getdetail in shop.metaobjects.store_location.values %}

      {% if getdetail.store_name == "Outlet" or getdetail.store_name == "Corporate Office" or getdetail.store_name == "Warehouse" %}
