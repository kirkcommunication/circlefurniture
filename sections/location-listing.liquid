<style>
.loc_section_wrapper{margin-top:50px;margin-bottom:50px;display:flex;justify-content:flex-start;column-gap:25px;padding:0px;max-width:1440px;flex-wrap:wrap;row-gap:25px;}
.location_box{text-align:center;border:1px solid #ececec;padding:0px;overflow:hidden;max-width:31%;width:100%;}
  .content_outerbox{ display:flex; gap:10px; justify-content:space-between; text-align:left; padding:0px 15px;}
  .content_outerbox h4{ padding:0px; margin:0px; margin-bottom:5px;}
  .content_outerbox .content_left{}
  .location_box:hover {box-shadow: 0px 4px 40px 0px rgba(0, 0, 0, 0.05);}
  .location_box h2.store-title{ font-size:24px; line-height:30px;text-align:left; margin-bottom:15px; margin-top:10px; font-family:'NunitoSans-SemiBold';}
  .location_box h3{ margin:0px 0px 15px;font-family:'NunitoSans-SemiBold';}
  .location_box h2{ padding-left:15px; padding-right:15px;font-family:'NunitoSans-SemiBold';}
  .store-image img{ object-fit:cover; width:100%; height:250px;}
  .store-phone a{ text-decoration:none; font-weight:600; color:#5f807f; font-size:16px;}
  .store-phone a:hover{text-decoration:underline;}
  .store-hours p{padding:0px; margin:0px; font-size:16px;}
   p.store-info{ font-size:16px; margin:0px;}
  .store-hours{ margin-bottom:30px;}
  .store_direction{ margin-bottom:20px;}
  .store_direction a{ text-decoration:none; color:#5f807f; font-size:16px;}
