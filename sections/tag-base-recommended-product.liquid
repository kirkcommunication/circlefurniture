<style>
    .product-card {
      box-sizing: border-box;
      float: left;
      min-height: 1em;
      padding-left: 2em;
      vertical-align: top;
      width: 25%;
    }
  
    .visuallyhidden {
      border: 0;
      clip: rect(0 0 0 0);
      height: 1px;
      margin: -1px;
      overflow: hidden;
      padding: 0;
      position: absolute;
      width: 1px;
      white-space: nowrap;
    }
  </style>





  <h3>recommend product</h3>

  {% assign vendor = product.vendor %}
  {% assign product_handle = product.handle %}
  handel is {{ product.vendor }}
    {% assign myArray = "" | split: "," %}
  {% for product in collections['all'].all_products %}
   {% if vendor == product.vendor and product.metafields.custom.sub_category_1 and product_handle != product.handle %}
        {% capture productInfo %}{{ product.title }},{{ product.price }},{{ product.vendor }}{% endcapture %}
   {% assign myArray = myArray | push: productInfo %}
  {% endif %}
  {% endfor %}

    {% for item in myArray %}
  {{ item }}
{% endfor %}
    



  {% schema %}
  {
    "name": "Recommended products",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Recommended products"
      },
      {
        "type": "text",
        "id": "related_tag",
        "label": "Tag",
        "info" : "The tag determines which products show as related products."
      },
      {
        "type": "select",
        "id": "number_of_products",
        "label": "Number of products to show",
        "default": "4",
        "options": [
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "8",
            "label": "8"
          },
          {
            "value": "12",
            "label": "12"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Recommended products"
      }
    ]
  }
  {% endschema %}